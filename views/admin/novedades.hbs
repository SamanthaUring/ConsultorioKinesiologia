<div id="home login" class="row align-items-center hero scroll_section">  
    <div class="container" style="margin-top: 50px auto">
        <div class="row">
            <div class="col">
                <p class="text-rigth">
                    <span>Hola {{usuario}}!</span>
                    <a href="/admin/login/logout" class="btn btn-sm btn-warning"> Cerrar sesi√≥n <i
                            class="fa fa-sign-out" aria-hidden="true"></i></a>
                </p>
            </div>
        </div>
        {{!-- inicio fila 2 --}}
        <div class="row">
            <div class="col-7" style="margin-top: 9px;">
                <h3>Listado de novedades</h3>
            </div>
            <div class="col-5 text-right">
                <a href="/admin/novedades/agregar/{{id}}" class="btn btn-danger"><i class="fas fa-pencil"></i> Nuevo </a>
            </div>
        </div>
        {{!-- fin fila 2 --}}
        {{!-- inicio fila 3 --}}
        <div class="row">
            <div class="col">
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">  </th>
                            <th scope="col"> Titulo </th>
                            <th scope="col"> Imagen </th>
                            <th scope="col" class="text-center"> Acciones </th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each novedades}}
                        <tr>
                            <th scope="row"> {{id}} </th>
                            <td> {{titulo}} </td>
                            <td> {{{imagen }}} </td>
                            <td class="text-center">
                                <a href="/admin/novedades/modificar/{{id}}" title="Editar" class="btn btn-sm btn-secondary">
                                    <i class="fas fa-pencil-alt"></i>
                                </a>
                                <a href="/admin/novedades/eliminar/{{id}}" title="Eliminar" class="btn btn-sm btn-secondary">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
        {{!-- fin fila 3  --}}
    </div>
</div>